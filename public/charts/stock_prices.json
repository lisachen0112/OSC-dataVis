{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "width": 650,
    "height": 300,
    "padding": 5,
    "signals": [
        { "name": "select", "value": "TSLA" },
        {
            "name": "minClose",
            "update": "data('stock_stats')[0].minClose"
          },
          {
            "name": "maxClose",
            "update": "data('stock_stats')[0].maxClose"
          },
          {
            "name": "adjustedMaxClose",
            "update": "maxClose + (maxClose - minClose) * 0.2"
          }
    ],
    "data": [
        {
            "name": "stock", 
            "url": "data/historical_stock_prices.json",
            "transform": [
                {
                    "type": "formula",
                    "expr": "toDate(datum.date)",  
                    "as": "date"
                },
                {
                    "type": "filter",
                    "expr": "datum.ticker === select"
                }
            ]
        },
        {
          "name": "stock_stats",
          "source": "stock",
          "transform": [
            {
              "type": "aggregate",
              "fields": ["close", "close"],
              "ops": ["min", "max"],
              "as": ["minClose", "maxClose"]
            }
          ]
        }
    ], 

    "scales": [
        {
          "name": "x",
          "type": "time",
          "range": "width",
          "domain": {"data": "stock", "field": "date"}
        },
        {
          "name": "y",
          "type": "linear",
          "range": "height",
          "nice": true,
          "zero": true,
          "domain": {"signal": "[0, adjustedMaxClose]"}
        },
        {
          "name": "color",
          "type": "ordinal",
          "range": "category",
          "domain": {"data": "stock", "field": "ticker"}
        }
      ],
      "axes": [
        {"orient": "bottom", "scale": "x"},
        {"orient": "left", "scale": "y"}
      ],
    
      "marks": [
        {
          "type": "group",
          "from": {
            "facet": {
              "name": "series",
              "data": "stock",
              "groupby": "ticker"
            }
          },
          "marks": [
            {
              "type": "line",
              "from": {"data": "series"},
              "encode": {
                "enter": {
                  "x": {"scale": "x", "field": "date"},
                  "y": {"scale": "y", "field": "close"},
                  "stroke": {"scale": "color", "field": "ticker"},
                  "strokeWidth": {"value": 2}
                }
              }
            }
          ]
        }
      ]
}