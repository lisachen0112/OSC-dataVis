{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "data/historical_stock_prices.json"
  },
  "transform": [
    {
      "filter": "datum.ticker === 'AMZN'"
    },
    {
      "window": [
        {
          "op": "mean",
          "field": "close",
          "as": "MVGA7"
        }
      ],
      "frame": [-6, 0],
      "groupby" : ["ticker"]
    },
    {
      "window": [
        {
          "op": "mean",
          "field": "close",
          "as": "MVGA30"
        }
      ],
      "frame": [-29, 0],
      "groupby" : ["ticker"]
    }
  ],
  "vconcat": [
    {
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "scale": {"domain": {"param": "brush"}},
          "axis" : {"format": "%d/%m", "labelAngle": 45}
        },
        "y": {
          "type": "quantitative"
        }
      },
      "layer": [
      {
        "layer": [{
          "mark": "line",
          "encoding": {
            "y": {"field": "close", "type": "quantitative"}
          }           
        }]        
      }
      ], 
      "width": 700,
      "height": 400
    },
    {
      "width": 700,
      "height": 100,
      "mark": "area",
      "params": [
        {
          "name": "brush",
          "select": {"type": "interval", "encodings": ["x"]}
        }
      ],
      "encoding": {
        "x": {"field": "date", "type": "temporal"},
        "y": {
          "field": "close",
          "type": "quantitative",
          "axis": {"tickCount": 3, "grid": false}
        }
      }
    }
  ]
      
  }