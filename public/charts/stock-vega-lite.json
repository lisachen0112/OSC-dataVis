{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "data/historical_stock_prices.json"
  },
  "transform": [
    {
      "filter": "datum.ticker === 'NFLX'"
    },
    {
      "window": [
        {
          "op": "mean",
          "field": "close",
          "as": "MVGA7"
        }
      ],
      "frame": [-6, 0],
      "groupby" : ["ticker"]
    },
    {
      "window": [
        {
          "op": "mean",
          "field": "close",
          "as": "MVGA30"
        }
      ],
      "frame": [-29, 0],
      "groupby" : ["ticker"]
    }
  ],
  "vconcat": [
    {
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "scale": {"domain": {"param": "brush"}},
          "axis" : {"format": "%d/%m", "labelAngle": 45}
        },
        "y": {
          "type": "quantitative"
        }
      },
      "layer": [
      { "encoding": {
          "color": {
            "condition": {
              "test": "datum.open < datum.close",
              "value": "#06982d"
            },
            "value": "#ae1325"
          }
        },
        "layer": [
        {
          "mark": "rule",
          "encoding": {
            "y": {"field": "low"},
            "y2": {"field": "high"}
          }
        },
        {
          "mark": "bar",
          "encoding": {
            "y": {"field": "open"},
            "y2": {"field": "close"}
          }
        }]
      },    
      {
        "mark": "line",
        "encoding": {
          "y": {"field": "MVGA7", "type": "quantitative"},
          "color": {"value": "red"},
          "size": {"value": 1},
          "opacity": {"value": 0.5}
        }
      },
      {
        "mark": "line",
        "encoding": {
          "y": {"field": "MVGA30", "type": "quantitative"},
          "color": {"value": "orange"},
          "size": {"value": 1},
          "opacity": {"value": 0.5}
        }
      }
      ], 
      "width": 700,
      "height": 400
    },
    {
      "width": 700,
      "height": 100,
      "mark": "area",
      "params": [
        {
          "name": "brush",
          "select": {"type": "interval", "encodings": ["x"]}
        }
      ],
      "encoding": {
        "x": {"field": "date", "type": "temporal"},
        "y": {
          "field": "close",
          "type": "quantitative",
          "axis": {"tickCount": 3, "grid": false}
        }
      }
    }
  ]
      
  }