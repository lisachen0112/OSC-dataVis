{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "data/historical_stock_prices.json"
  },
  "transform": [
    {
      "filter": "datum.ticker === 'AMZN'"
    },
    {
      "window": [
        {
          "op": "mean",
          "field": "close",
          "as": "MVGA7"
        }
      ],
      "frame": [-6, 0],
      "groupby" : ["ticker"]
    },
    {
      "window": [
        {
          "op": "mean",
          "field": "close",
          "as": "MVGA30"
        }
      ],
      "frame": [-29, 0],
      "groupby" : ["ticker"]
    }
  ],
  "vconcat": [
    {
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "axis" : {"format": "%d/%m", "labelAngle": 45}
        },
        "y": {
          "type": "quantitative"
        }
      },
      "layer": [
        {
          "mark": "line",
          "encoding": {
            "y": {"field": "close", "type": "quantitative"}
          }           
        },
        {
          "mark": "line",
          "encoding": {
            "y": {"field": "MVGA7", "type": "quantitative"},
            "color": {"value": "red"},
            "opacity": {"value": 0}
          }
        },    
        {
          "mark": "line",
          "encoding": {
            "y": {"field": "MVGA30", "type": "quantitative"},
            "color": {"value": "orange"},
            "opacity": {"value": 0}
          }
        }
      ], 
      "width": 700,
      "height": 400
    }
  ]
      
  }