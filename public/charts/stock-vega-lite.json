{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "data/historical_stock_prices.json"
  },
  "transform": [
    {
      "filter": "datum.ticker === 'NFLX'"
    },
    {
      "window": [
        {
          "op": "mean",
          "field": "close",
          "as": "rolling_mean"
        }
      ],
      "frame": [-6, 0],
      "groupby" : ["ticker"]
    }
  ],
  "vconcat": [
    {"layer": [
      {
        "mark": "line",
        "encoding": {
          "x": {
            "field": "date", 
            "type": "temporal", 
            "scale": {"domain": {"param": "brush"}}
          },
          "y": {"field": "close", "type": "quantitative"}
          
        }
      },
      {
        "mark": "line",
        "encoding": {
          "x": {"field": "date", "type": "temporal", "scale": {"domain": {"param": "brush"}}},
          "y": {"field": "rolling_mean", "type": "quantitative"},
          "color": {"value": "red"},
          "size": {"value": 1},
          "opacity": {"value": 0.5}
        }
      }
      ], 
      "width": 700,
      "height": 400
    },
    {
      "width": 700,
      "height": 100,
      "mark": "area",
      "params": [
        {
          "name": "brush",
          "select": {"type": "interval", "encodings": ["x"]}
        }
      ],
      "encoding": {
        "x": {"field": "date", "type": "temporal"},
        "y": {
          "field": "close",
          "type": "quantitative",
          "axis": {"tickCount": 3, "grid": false}
        }
      }
    }
  ]
      
  }