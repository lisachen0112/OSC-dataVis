{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "A basic pie chart example.",
    "width": 300,
    "height": 300,
    "padding": 20,
    "autosize": "none",
    "signals": [
      {
        "name": "startAngle", "value": 0
      },
      {
        "name": "endAngle", "value": 6.29
      },
      {
        "name": "padAngle", "value": 0
      },
      {
        "name": "innerRadius", "value": 0
      },
      {
        "name": "cornerRadius", "value": 0
      }
    ],
    "title": {
      "text": "SP500 Sector Performance",
      "anchor": "middle",
      "frame": "group",
      "offset": 4
    },
    "data": [
      {
        "name": "sp500",
        "url": "data/sp500sector.csv",
        "format": {
          "type": "csv"
        },
        "transform": [
            {
                "type": "filter",
                "expr": "datum.period === '1day'"
            },
            {
                "type": "pie",
                "field": "weight",
                "startAngle": 0,
                "endAngle": 6.29
            }
        ]
      }
    ],
  
    "scales": [
      {
        "name": "color",
        "type": "ordinal",
        "domain": {"data": "sp500", "field": "percentage_change"},
        "range": ["green", "red"]
      }
    ],
  
    "marks": [
      {
        "type": "arc",
        "from": {"data": "sp500"},
        "encode": {
          "enter": {
            "x": {"signal": "width / 2"},
            "y": {"signal": "height / 2"},
            "tooltip": {
              "signal": "{'Sector': datum.sector, 'Percentage Change': format(datum.percentage_change, '.2%'), 'Weight': format(datum.weight, '.2%')}"
            },
            "stroke": {"value": "white"},
            "strokeWidth": {"value": 1}
          },
          "update": {
            "startAngle": {"field": "startAngle"},
            "endAngle": {"field": "endAngle"},
            "padAngle": {"signal": "padAngle"},
            "innerRadius": {"signal": "innerRadius"},
            "outerRadius": {"signal": "width / 2"},
            "cornerRadius": {"signal": "cornerRadius"},
            "fill": [
              {
                "test": "datum.percentage_change > 0",  
                "value": "green"
              },
              {
                "test": "datum.percentage_change <= 0",
                "value": "red"
              }
            ]
          }
        }
      }, 
      {
        "type": "text",
        "from": {"data": "sp500"},
        "encode": {
          "enter": {
            "x": {"signal": "width / 2"},
            "y": {"signal": "height / 2"},
            "radius": {"signal": "min(width, height) / 4 + 45"},  
            "theta": {"signal": "(datum.startAngle + datum.endAngle) / 2"},
            "fill": {"value": "white"},  
            "align": {"value": "center"},
            "baseline": {"value": "middle"},
            "text": {"signal": "format(datum.percentage_change, '.2%')"}  
          }
        }
      }
    ]
  }